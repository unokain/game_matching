
<h3>以下の内容で、送信する。</h3>
<%= form_with(model: @plan, url: plans_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <p>タイトル:<%= @plan.title %></p>
  <p>本文:<%= @plan.content %></p>
  <%= form.submit "投稿する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
