
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="list_comment">
        <div class="col-12">
          <p><%= comment.user.name %>さんがコメントしました。</p>
          <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <p><%= comment.content %></p>
          <% if current_user.id == comment.user.id %>
            <div class="text-right">
              <%= link_to edit_plan_comment_path(plan, comment), remote: true do%>
                <i class="fas fa-edit"></i>
              <% end %>      
              <%= link_to plan_comment_path(comment.plan_id, comment.id), method: :delete, remote: true,
                                              data: { confirm: "本当に削除しますか?"} do%>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </div>  
          <% end %>                   
        </div>
      </li>
      <hr>
    <% end %>
  <% end %>
